<div class="additional-items">
  <!-- 初期の入力欄 -->
  <div class="input-field">
    <div class="field">
      <%= form.label :day %>
      <%= form.date_field :"bookmark_detail_attributes[day]", value: Date.today, class: "day-input" %>
    </div>

    <div class="field">
      <%= form.label :time %>
      <%= form.text_field :"bookmark_detail_attributes[time]", type: "time", class: "time-input form-control" %>
    </div>

    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :"bookmark_detail_attributes[location]", class: "location-input form-control" %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :"bookmark_detail_attributes[description]", class: "description-input form-control" %>
    </div>

    <button class="delete-btn">削除</button>
  </div>
</div>
